<h1>Transactions</h1>

<%= link_to "New Transaction", new_transaction_path %>

<table class="table">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Note</th>
      <th>Bank</th>
      <th>Income</th>
      <th>Applied</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td>
          <%= transaction.amount %>
        </td>
        <td>
          <%= transaction.note %>
        </td>
        <td>
          <%= link_to transaction.bank.name, bank_path(transaction.bank) %>
        </td>
        <td>
          <%= link_to transaction.income.name, transaction.income_path %>
        </td>
        <td>
          <%= transaction.applied_at %>
        </td>
        <td>
          <%= link_to "Edit", edit_transaction_path(transaction) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
